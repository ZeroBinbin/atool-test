#!/usr/bin/env node

var commander = require('commander');
var path = require('path');
var spawn = require('child_process').spawn;

commander
  .version(require('../package').version, '-v, --version')
  .option('-w, --watch', 'watch test file changes and retest')
  .option('-c, --coverage', 'code coverage')
  .parse(process.argv);

//#require('../lib/test')(commander);

var karma_config_file = path.resolve(__dirname, '../karma.conf.js');
var child = spawn('node_modules/.bin/karma', ['start', karma_config_file], { stdio: 'inherit' })

child.on('exit', function (code, signal) {
  process.on('exit', function(){
    if (signal) {
      process.kill(process.pid, signal);
    } else {
      process.exit(code);
    }
  });
});

process.on('SIGINT', function () {
  child.kill('SIGINT');
  child.kill('SIGTERM');
});



