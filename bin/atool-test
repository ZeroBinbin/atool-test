#!/usr/bin/env node

var commander = require('commander');
var path = require('path');
var spawn = require('child_process').spawn;

commander
  .version(require('../package').version, '-v, --version')
  .option('--test-dir', 'basic tests dir, default cwd/test')
  .option('--port', 'The port where the webserver will be listening, default 9876')
  .parse(process.argv);

var karma_config_file = path.resolve(__dirname, '../karma.conf.js');
var args = ['start', karma_config_file].concat(process.argv.slice(2));

var child = spawn('node_modules/.bin/karma', args, { stdio: 'inherit' })

child.on('exit', function (code, signal) {
  process.on('exit', function(){
    if (signal) {
      process.kill(process.pid, signal);
    } else {
      process.exit(code);
    }
  });
});

process.on('SIGINT', function () {
  child.kill('SIGINT');
  child.kill('SIGTERM');
});





