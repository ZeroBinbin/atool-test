<html>
<head>
  <meta charset="utf-8">
  <% for (var css in htmlWebpackPlugin.options.files.css) { %>
  <link href="<%= htmlWebpackPlugin.options.files.css[css] %>" rel="stylesheet">
  <% } %>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/mocha/2.5.3/mocha.min.js"></script>
  <link rel="stylesheet" href="/tests/test.css">
</head>
<body>
<div id="mocha"></div>
<% for (var js in htmlWebpackPlugin.options.files.js) { %>
<script src="<%= htmlWebpackPlugin.options.files.js[js] %>"></script>
<% } %>
<script src="/tests/mocha.js"></script>
<script>
  mocha.ui('bdd')
</script>
<script src="/tests/test.js"></script>
<script>
  (function() {
    if (typeof Function.prototype.bind != 'function') {
      Function.prototype.bind = function bind(obj) {
        var args = Array.prototype.slice.call(arguments, 1),
            self = this,
            nop = function() {},
            bound = function() {
              return self.apply(
                  this instanceof nop ? this : (obj || {}), args.concat(
                      Array.prototype.slice.call(arguments)
                  )
              );
            };
        nop.prototype = this.prototype || {};
        bound.prototype = new nop();
        return bound;
      };
    }
  })();
</script>
<script>
  mocha.run()
</script>
</body>
</html>